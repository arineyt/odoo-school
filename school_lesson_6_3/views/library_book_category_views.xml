<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_book_category_view_form" model="ir.ui.view">
        <field name="name">library.book.category.view.form.inherit.school_lesson_6_3</field>
        <field name="model">library.book.category</field>
        <field name="inherit_id" ref="school_lesson_6_1.library_book_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <div class="oe_button_box" name="button_box">
                    <button
                            name="action_book_list"
                            class="oe_stat_button"
                            type="object"
                            icon="fa-book"
                            string="Books"
                    />
                </div>
            </xpath>
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Description" name="description">
                        <field name="description"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
